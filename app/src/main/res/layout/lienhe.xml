<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vn.com.pqs.simplekaraokelist.DanhSach"
    android:orientation="vertical"
android:paddingLeft="3dp"
    android:weightSum="1">



    <TextView
        android:text="Hướng dẫn tìm bài hát:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textColor="@color/primary_color"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />
    <TextView
        android:text="* Gõ tên viết tắt, tên, lời bài hát, nhạc sĩ, ca sĩ để tìm bài hát."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:textColor="@color/navigationBarColor"
        android:textSize="18sp" />

    <TextView
        android:text="- Gõ 'tdp' để tìm bài 'Tình Đơn Phương'."
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:textColor="@color/navigationBarColor"
        android:textSize="18sp" />
    <TextView
        android:text="- Gõ 'Ưng Hoàng Phúc' để tìm các bài hát của CS Ưng Hoàng Phúc."
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView23"
        android:textColor="@color/navigationBarColor"
        android:textSize="18sp" />
    <TextView
        android:text="- Gõ 'Trịnh Công Sơn' để tìm các bài nhạc Trịnh."
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView24"
        android:textColor="@color/navigationBarColor"
        android:textSize="18sp" />

    <TextView
        android:text="Hướng dẫn tìm địa điểm Karaoke:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textView31"
        android:textColor="@color/primary_color"
        android:textSize="20sp" />
    <TextView
        android:text="* Nhập phường, xã, quận huyện và ô cần tìm: VD: phuong 1 quan 5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView30"
        android:textColor="@color/navigationBarColor"
        android:textSize="18sp" />
    <TextView
        android:text="Contact"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textView35"
        android:textColor="@color/primary_color"
        android:textSize="20sp" />
    <TextView
        android:text="- Website: http://pq-s.com"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@color/accent_color"
        android:textSize="18sp" />


    <TextView
        android:text="- Email: pqsolu@gmail.com"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:id="@+id/textView78"
        android:textColor="@color/accent_color"
        android:textSize="18sp" />

</LinearLayout>